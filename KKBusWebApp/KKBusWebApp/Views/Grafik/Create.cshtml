@model KKBusWebApp.Models.CZAS_PRACY

@{
    ViewBag.Title = "Dodaj";
}

@section JSPlugins
{
    <script type="text/javascript" src="@Url.Content("/Scripts/jquery.datetimepicker.js")"></script>
    <link rel="stylesheet" type="text/css" href="@Url.Content("/Content/jquery.datetimepicker.css")" />
    <script type="text/javascript">
        $('.datetimepickerCL').datetimepicker({
            theme: 'dark',
            dayOfWeekStart: 1,
            lang: 'pl',
            minDate: '0',
            mask: true,
            step: 10
        });
    </script>

}

<h2>Dodaj</h2>

