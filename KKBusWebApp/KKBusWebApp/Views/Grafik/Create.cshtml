            </div>*@
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CZA_OD, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input class="datetimepickerCL" type="text" name="CZA_OD">
                @Html.ValidationMessageFor(model => model.CZA_OD)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.CZA_DO, new { @class = "control-label col-md-2" })
