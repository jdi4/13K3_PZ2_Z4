@model KKBusWebApp.Models.PRZYSTANKI

@{
    ViewBag.Title = "Edytuj przystanek";
}

<h2>Edytuj przystanek</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Przystanek</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.PRZY_ID)

        <div class="form-group">
            @Html.LabelFor(model => model.PRZY_NAZWA, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRZY_NAZWA)
                @Html.ValidationMessageFor(model => model.PRZY_NAZWA)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRZY_GPS_LONGITUDE, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRZY_GPS_LONGITUDE)
                @Html.ValidationMessageFor(model => model.PRZY_GPS_LONGITUDE)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRZY_GPS_LATITUDE, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRZY_GPS_LATITUDE)
                @Html.ValidationMessageFor(model => model.PRZY_GPS_LATITUDE)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PRZY_ZADANIE, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PRZY_ZADANIE)
                @Html.ValidationMessageFor(model => model.PRZY_ZADANIE)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Powrót", "Index")
</div>
