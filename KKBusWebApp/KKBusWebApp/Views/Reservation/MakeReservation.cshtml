<h2>Zarezerwuj</h2>

<div>
    <h4>Rezerwacja</h4>
	<hr />
    <dl class="dl-horizontal">

        <dt>
            Kurs
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            Cena
        </dt>

        <dd id="res_price">
            @Html.DisplayFor(model => model.Reservation.REZ_CENA)
        </dd>

        <dt>
            Imię i nazwisko
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.CourseId)
            @Html.HiddenFor(model => model.Reservation)

            <div id="ticketTypesList">
                @if(Model.TicketsTypes != null)
                { 
                    foreach (var ticketType in Model.TicketsTypes)
                    {
                        @Html.Partial("_TicketTypesListPartial", ticketType)
                    }
                }
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="TicketsTypes">Rodzaj biletów</label>
                <div class="col-md-10">
                    @Html.DropDownList("TicketsTypesDropDownList")
                    @Html.ValidationMessageFor(model => model.TicketsTypes)
                    @*<button id="addTicket">Dodaj rodzaj biletu</button>*@
                    @*<a id='addTicket' href="#">Dodaj rodzaj biletu</a>*@
                    @Html.ActionLink("Dodaj rodzaj biletu", "AddTicketType", new { ticketId = 0 }, new { id = "addTicket" })                   
                </div>
            </div>


            <div class="form-group">
                @*@Html.LabelFor(model => model.TicketsTypes, "Rodzaj biletu", new { @class = "control-label col-md-2" })*@
                @*<label class="control-label col-md-2" for="TicketsTypes">YOLO Ilośc biletów</label>*@
                <div class="col-md-10">
                    @*<input class="text-box single-line" data-val="true" data-val-number="" data-val-required="" id="TicketsNumber" name="Ilośc biletów" type="number" value="1" min="1" max="99" step="1" />*@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Rezerwuj" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<p>
    @*@Html.ActionLink("Potwierdź rezerwację", "ConfirmReservation", new { id = Model.REZ_ID }) |*@
    @Html.ActionLink("Powrót do listy", "AvaiableReservations")
</p>
