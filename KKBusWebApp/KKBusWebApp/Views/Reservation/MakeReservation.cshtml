@model KKBusWebApp.Models.MakeReservationViewModel

@{
    ViewBag.Title = "Zarezerwuj";
}

@section Scripts
{

    <script type="text/javascript">
        base_price = parseInt($("#res_price").text(), 10);

        $(":input[type='number']").keypress(function (evt) {
            evt.preventDefault();
        });

        $(":input[type=number]").bind('input', function () {
            price = base_price * parseInt($(this).val(), 10);
            $("#res_price").text(price);
        });

        var url = '@Url.Action("AddTicketType")';
        $("#addTicket").click(function () {
            var row = $(this).closest('tr');
            var rowID = row.children('td').eq(0).text();
            var actionID = row.find('select').val();
            window.location.href = url + '?adId=' + rowID + '&action=' + actionID;
        });

        //$("#addTicketType").click(function () {
        //    $.ajax({
        //        url: this.href,
        //        cache: false,
        //        success: function (html) { $("#ticketTypesList").append(html); }
        //    });
        //    return false;
        //});
    </script>
}


<h2>Zarezerwuj</h2>

<div>
    <h4>Rezerwacja</h4>
	<hr />
    <dl class="dl-horizontal">

        <dt>
            Kurs
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CourseName)
        </dd>

        <dt>
            Cena
        </dt>

        <dd id="res_price">
            @Html.DisplayFor(model => model.Reservation.REZ_CENA)
        </dd>

        <dt>
            Imię i nazwisko
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            @*@Html.HiddenFor(model => model.PRZ_ID)*@

            <div id="ticketTypesList">
                @foreach (var ticket in Model.TicketsTypes)
                {
                    @Html.Partial("_TicketTypesListPartial", ticket)
                }
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="TicketsTypes">Rodzaj biletów</label>
                <div class="col-md-10">
                    @Html.DropDownList("TicketsTypesList", String.Empty)
                    @Html.ValidationMessageFor(model => model.TicketsTypes)
                    <button id="addTicket">Dodaj rodzaj biletu</button>
                    @Html.ActionLink("Dodaj rodzaj biletu", "AddTicketType", Model.TicketsTypesList.SelectedValue, new { id = "addTicketType" })                   
                </div>
            </div>

            <div class="form-group">
                @*@Html.LabelFor(model => model.TicketsTypes, "Rodzaj biletu", new { @class = "control-label col-md-2" })*@
                <label class="control-label col-md-2" for="TicketsTypes">YOLO Ilośc biletów</label>
                <div class="col-md-10">
                    <input class="text-box single-line" data-val="true" data-val-number="" data-val-required="" id="TicketsNumber" name="Ilośc biletów" type="number" value="1" min="1" max="99" step="1" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Rezerwuj" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
<p>
    @*@Html.ActionLink("Potwierdź rezerwację", "ConfirmReservation", new { id = Model.REZ_ID }) |*@
    @Html.ActionLink("Powrót do listy", "AvaiableReservations")
</p>
